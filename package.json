{
  "name": "animal-crossing-graphql",
  "version": "1.0.0",
  "description": "A GraphQL service for querying Animal Crossing data.",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "test": "jest",
    "build": "tsc --sourceMap false",
    "lint": "eslint -c '.eslintrc.js' 'src/**/*.{js,ts,tsx}' 'test/**/*.{js,ts,tsx}' --quiet --fix",
    "start:watch": "tsc-watch --onSuccess 'npm start'"
  },
  "keywords": [],
  "author": "Steve Crow <steve@smcrow.net>",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^25.5.3",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "tsc-watch": "^4.2.3",
    "typescript": "^3.8.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/test/*.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run build && npm run start",
    "ext": "ts"
  },
  "dependencies": {
    "@types/express": "^4.17.6",
    "express": "^4.17.1"
  }
}
