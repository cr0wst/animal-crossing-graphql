{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "lib": ["es6"],
    "types": ["reflect-metadata"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*", "extractfields.js"
  ],
  "exclude": [
    "test"
  ],
  "lib": [
    "es2019"
  ],
  "compileOnSave": true
}